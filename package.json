{
  "name": "eloquent-chat-widget",
  "version": "1.0.0",
  "type": "module",
  "description": "A modern, embeddable chat widget with AI integration for React applications",
  "main": "dist/eloquent-chat-widget.umd.js",
  "module": "dist/eloquent-chat-widget.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:types && vite build",
    "clean": "rm -rf dist",
    "build:types": "tsc --emitDeclarationOnly",
    "preview": "npm run build && cp demo.html dist/ && echo 'ðŸš€ Building and starting preview server...' && echo 'ðŸ“– The demo will open automatically at http://localhost:4173/demo.html' && vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build",
    "publish:npm": "npm publish",
    "publish:check": "npm pack --dry-run"
  },
